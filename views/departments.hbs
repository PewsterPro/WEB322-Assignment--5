<div class="row">
 <div class="col-md-12">
    <style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td {
  border-top: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}


</style>
 <h2>Departments</h2>
 <hr>
 <p>
    <table>
    <tr>
            <th>Department Number</th>
            <th>Department Name</th>          
    </tr>
    {{#each departments}}
    <tr>
        <td><a href="http://localhost:8080/employees?department={{departmentId}}">{{departmentId}}</a></td>
        <td><a href="http://localhost:8080/employees?department={{departmentId}}">{{departmentName}}</a></td>
    </tr>
       {{else}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/each}}
    </table>
 </p>
 </div>
</div>